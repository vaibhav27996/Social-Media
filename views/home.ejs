<div class="container">

    <h3>
        <%= title %>
     </h3>

     <div class="row">

        <% if(locals.user) { %>
        <div class="col-12 col-sm-5 col-md-5 col-lg-5">
            <div class="card">
     
                <div class="card-header">
                    <h4>Posts</h4>
                </div>
            
                <div class="card-body">
                    <section id="feed-posts">
                
                        <form action="/posts/create" id="new-post-form" method="post">
                            <textarea name="content" cols="30" rows="3" placeholder="Enter post" class="form-control"></textarea>
                            <button type="submit" class="btn btn-md btn-success">Post</button>
                        </form>
                    
                    </section>
                </div>
            
            </div>
        </div>
        <% } %>
        
        <div class="col-12 col-sm-7 col-md-7 col-lg-7">
            <table class="table table-dark table-striped table-hover table-bordered">
                <tr>
                    <th>Sr No.</th>
                    <th>Posts</th>
                    <th>User</th>
                </tr>

                <% var count=1; %>
                <% for(let i of posts) { %>

                    <tr>
                        <td><%= count %></td>
                        <td><%= i.content %></td>
                        <td><%= i.user.name %></td>
                    </tr>
                <% count++;
                    } %>  
            </table>
        </div>

     </div>
     


</div>



